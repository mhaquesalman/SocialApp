<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_radius"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comments_count"
        tools:text = "0 Comment"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@id/backBtn"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backBtn"
        android:src="@drawable/ic_back"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_alignParentStart="true"
        app:tint="@color/colorPrimaryDark"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/commentRV"
        android:layout_below="@id/comments_count"
        android:layout_above="@id/comment_wrapper"
        tools:listitem="@layout/item_comment"
        tools:itemCount="3"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comment_wrapper"
        android:layout_margin="8dp"
        android:layout_alignParentBottom="true">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/comment_txt"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginEnd="10dp"
            android:hint="Type comment.."
            android:textColorHint="@color/ef_black_alpha_aa"/>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/comment_send"
            android:layout_gravity="end"
            android:layout_marginBottom="10dp"
            android:alpha="0.4"
            android:background="@drawable/comment_send_bg">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:rotation="330"
                android:src="@drawable/ic_send"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>