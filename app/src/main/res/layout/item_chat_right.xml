<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/profile_image"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:src="@drawable/default_profile_placeholder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_right"
        android:text="hello"
        android:layout_alignParentEnd="true"
        android:id="@+id/show_message"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:padding="8dp" />

    <TextView
        android:id="@+id/seen_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_message"
        android:layout_alignEnd="@id/show_message"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="6dp"
        tools:text="Sent"
        android:visibility="visible" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/chat_img"
        android:background="@android:color/background_dark"
        android:scaleType="fitCenter"
        android:layout_alignParentEnd="true"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seen_img_status"
        android:layout_below="@id/chat_img"
        android:layout_alignEnd="@id/chat_img"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="6dp"
        tools:text="Sent"
        android:visibility="gone" />

</RelativeLayout>